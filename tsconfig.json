{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "module": "esNext",
        "target": "es5",
        "jsx": "react",
        "allowJs": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "rootDir": "src",
        //"forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        //"noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "declaration": true,
        "removeComments": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/index.tsx",
        "src/App.tsx",
        "src/DesignPage.tsx"
    ]
}